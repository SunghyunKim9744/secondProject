<tiles-definitions>

<!-- 루트로부터 시작되는 페이지이기 때문에 앞에 home을 붙여서 구분함. 
	*.* = > 모든 경로 지정 되기때문
 -->
 
  <definition name="customer.activity.group.*.board.reg" template="/WEB-INF/view/customer/activity/group/{1}/board/reg.jsp">
   
  </definition>
  <definition name="customer.activity.group.*.index" template="/WEB-INF/view/customer/activity/group/{1}/index.jsp">
   
  </definition>
  
  <definition name="customer.activity.group.*.info" template="/WEB-INF/view/customer/activity/group/{1}/info.jsp">
   
  </definition>
  
  
  <definition name="customer.*.popup.*" template="/WEB-INF/view/customer/{1}/inc/layout.jsp">
   
    <put-attribute name="main" value="/WEB-INF/view/customer/{1}/{2}.jsp" />
  
  </definition>
  
  <definition name="customer.profile.*" template="/WEB-INF/view/customer/profile/inc/layout.jsp">
    <put-attribute name="title" value="Tiles tutorial homepage" />
    <put-attribute name="header" value="/WEB-INF/view/inc/header.jsp" />
    <put-attribute name="main" value="/WEB-INF/view/customer/profile/{1}.jsp" />
    <put-attribute name="footer" value="/WEB-INF/view/inc/footer.jsp" />
  </definition>
 
  <definition name="customer.*.*" template="/WEB-INF/view/inc/layout.jsp">
    <put-attribute name="title" value="Tiles tutorial homepage" />
    <put-attribute name="header" value="/WEB-INF/view/inc/header.jsp" />
    <put-attribute name="main" value="/WEB-INF/view/customer/{1}/{2}.jsp" />
    <put-attribute name="footer" value="/WEB-INF/view/inc/footer.jsp" />
  </definition>
  
  <definition name="customer.*" template="/WEB-INF/view/inc/layout.jsp">
    <put-attribute name="title" value="Tiles tutorial homepage" />
    <put-attribute name="header" value="/WEB-INF/view/inc/header.jsp" />
    <put-attribute name="main" value="/WEB-INF/view/customer/{1}.jsp" />
    <put-attribute name="footer" value="/WEB-INF/view/inc/footer.jsp" />
  </definition>
  
  
  
 <definition name="home.index" template="/WEB-INF/view/inc/layout.jsp">
    <put-attribute name="title" value="Tiles tutorial homepage" />
    <put-attribute name="header" value="/WEB-INF/view/inc/header.jsp" />
    <put-attribute name="main" value="/WEB-INF/view/index.jsp" />
    <put-attribute name="footer" value="/WEB-INF/view/inc/footer.jsp" />
  </definition>
  
  
  <definition name="home.admin.index" template="/WEB-INF/view/admin/index.jsp">
    <put-attribute name="title" value="Tiles tutorial homepage" />
    <put-attribute name="header" value="/WEB-INF/view/admin/inc/header.jsp" />
  </definition>
  

 
  <definition name="admin.member.popup.*" template="/WEB-INF/view/admin/member/inc/layout.jsp">
   
    <put-attribute name="main" value="/WEB-INF/view/admin/member/{1}.jsp" />
  
  </definition>
  <definition name="admin.*.*" template="/WEB-INF/view/admin/inc/layout.jsp">
    <put-attribute name="title" value="Tiles tutorial homepage" />
    <put-attribute name="header" value="/WEB-INF/view/admin/inc/header.jsp" />
    <put-attribute name="aside" value="/WEB-INF/view/admin/{1}/inc/aside.jsp" />
    <put-attribute name="main" value="/WEB-INF/view/admin/{1}/{2}.jsp" />
  
  </definition>
   


</tiles-definitions>