	*.* = > 모든 경로 지정 되기때문
 -->
 
 <definition name="home.index" template="/WEB-INF/view/inc/layout.jsp">
    <put-attribute name="title" value="Tiles tutorial homepage" />
    <put-attribute name="header" value="/WEB-INF/view/inc/header.jsp" />
    <put-attribute name="main" value="/WEB-INF/view/index.jsp" />
    <put-attribute name="footer" value="/WEB-INF/view/inc/footer.jsp" />
    
  </definition>
  
  <definition name="home.admin.login" template="/WEB-INF/view/admin/login.jsp">
    <put-attribute name="title" value="Tiles tutorial homepage" />
   
  </definition>
  
  <definition name="home.admin.index" template="/WEB-INF/view/admin/index.jsp">
    <put-attribute name="title" value="Tiles tutorial homepage" />
    <put-attribute name="header" value="/WEB-INF/view/admin/inc/header.jsp" />
  </definition>
 
  <definition name="admin.member.detail" template="/WEB-INF/view/admin/member/inc/layout.jsp">
   
    <put-attribute name="main" value="/WEB-INF/view/admin/member/detail.jsp" />
  
  </definition>
  <definition name="admin.*.*" template="/WEB-INF/view/admin/inc/layout.jsp">
    <put-attribute name="title" value="Tiles tutorial homepage" />
